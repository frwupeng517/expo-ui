/* components/boothContainer/boothContainer.wxss */
.booth-container{
  display: flex;
  flex-wrap: wrap;
  /* width: 100%;  */
  width: 600px;
  overflow: auto;
  margin-top: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.booth{
  width: 120rpx;
  height: 80rpx;
  margin: 0 70rpx 50rpx 0;
  background-color: #E6E6E6;
}

movable-area{
  width: 100%;
  height: 100%;
}

.location{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #E6E6E6;
  border-radius: 50%;
}

.dot{
  width: 30rpx;
  height: 30rpx;
  background-color: #00CCFE;
  border-radius: 50%;
}

