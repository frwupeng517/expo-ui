/* components/activityCmps/tvList/tvList.wxss */
.title{
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  color: #adafae;
  background-color: #f1f2f4;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.list-content{
  padding: 10rpx 20rpx;
}
.toggle-tv{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #f7f7f7;
}
.toggle-tv .tv{
  font-size: 28rpx;
  color: #343434;
}
.btn{
  align-items: center;
  width: 120rpx;
  padding: 15rpx 0;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
  background-color: #b3b3b3;
  border-radius: 10rpx;
}
.btn-warning{
  background-color: #fa960a;
}
.btn-primary{
  background-color: #009be5;
}
.btn-danger{
  background-color: #ff8e85;
}
.date-tv{
  position: relative;
  padding: 10rpx 0;
  font-size: 24rpx;
  color: #999;
}
.date-tv::before{
  display: inline-block;
  content: '';
  width: 20rpx;
  height: 20rpx;
  margin-right: 20rpx;
  background-color: #999;
}
.tv-items .item{
  display: flex;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 2rpx solid #f7f7f7;
}
.item-time, .item-name{
  font-size: 28rpx;
  color: #343434;
}
.item-name{
  flex: 1;
  margin: 0 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}