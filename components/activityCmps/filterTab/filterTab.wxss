/* components/activityCmps/filterTab/filterTab.wxss */
.filter-tab{
  display: flex;
  align-items: center;
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
}
.tab{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 25%;
}
.tab-text{
  margin-right: 6rpx;
  letter-spacing: 4rpx;
  font-size: 24rpx;
  color: #979898;
}
.tab-icon{
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 8rpx solid #979898;
}
.tab.selected .tab-text{
  color: #FF8980;
}
.tab.selected .tab-icon{
  border-top-color: #FF8980;
}
