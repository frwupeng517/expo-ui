/* components/exhibitorCmps/exhibitorDetailCmp/exhibitorDetailCmp.wxss */
.exhibitor-detail-cmp{
  padding-bottom: 60rpx;
}
.title-content{
  position: relative;
  padding: 10rpx 30rpx;
  border-bottom: 1px solid #ccc;
  background-color: #e6e6e6;
}
.title-content .more{
  position: absolute;
  top: 26rpx;
  right: 26rpx;
  display: block;
  content: '';
  width: 20rpx;
  height: 20rpx;
  border-width: 1px 1px 0 0;
  border-style: solid;
  border-color: #999;
  transform: rotate(45deg);
}
.title-content .more.open{
  transform: rotate(135deg);
}
.title-content .title{
  display: inline-block;
  font-size: 32rpx;
  letter-spacing: 4rpx;
  color: #999;
}
.detail-content{
  padding: 30rpx;
  background-color: #fff;
}