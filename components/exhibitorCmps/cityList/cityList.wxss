/* components/exhibitorCmps/cityList/cityList.wxss */
page::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.container{
  position: relative;
}
.city-list{
  height: 100%;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}
.city-header{
  padding: 15rpx 22rpx;
  font-size: 28rpx;
  color: #4F5F70;
  background: #e6e6e6;
}
.city-body{
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.city-body.empty{
  position: relative;
  top: -1px;
  background-color: #f7f7f7;
}
.city-body.empty .city-content{
  border: none;
}
.city-body .select-icon{
  width: 22rpx;
  height: 22rpx;
  margin: 0 22rpx;
  border: 2px solid #ccc;
  border-radius: 50%;
}
.city-body .select-icon.selected{
  border-color: #ff877e;
  background-color: #ff877e;
}
.city-content{
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #ccc;
}
.city-content.last-city{
  border-bottom: none;
}
.city-content__detail{
  display: flex;
  align-items: center;
}

.city-content__detail .name{
  font-size: 28rpx;
  color: #4e5f71;
}
.no-people{
  font-size: 28rpx;
  letter-spacing: 4rpx;
  color: #999;
}
.elevator-container{
  position: absolute;
  top: 75rpx;
  right: 10rpx;
  bottom: 20rpx;
  width: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  z-index: 100;
  box-sizing: border-box;
}
.elevator-container .elevator{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 40rpx;
  height: 40rpx;
  font-size: 28rpx;
  /* padding: 2rpx 6rpx; */
  color: #ff877e;
}
.elevator.focus{
  border-radius: 50%;
  color: #fff;
  background-color: #ff877e;
}

.fixed-groupName{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  padding: 15rpx 22rpx;
  color: #ff877e;
  background-color: #fff;
  font-size: 28rpx;
  border-bottom: 1px solid #f5f5f5;
  z-index: 999;
}
.fixed-groupName.hide{
  display: none;
}