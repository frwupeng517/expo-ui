/* pages/exhibitorDetail/exhibitorDetail.wxss */
page{
  background-color: #e6e6e6;
}
.container{
  
}
.title{
  padding: 10rpx 30rpx;
  font-size: 32rpx;
  letter-spacing: 4rpx;
  font-family: "Microsoft Yahei";
  color: #999;
  background-color: #e6e6e6;
}
.company-intro{
  padding: 10rpx 20rpx;
  background-color: #fff;
}
.company-intro .icons{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 20rpx;
}
.location-icon{
  text-align: center;
}
.location-icon .text{
  margin-top: -4rpx;
  font-size: 20rpx;
  color:#DF5B4F;
}
.expo-icon{
  padding: 0 16rpx;
  border: 1px solid #F2D556;
}
.expo-icon .expo-number{
  font-size: 28rpx;
  color: #F2D556;
}
.company-logo{
  margin-top: 20rpx;
  width: 200rpx;
}
.company-name, .main-title{
  font-size: 32rpx;
  font-weight: 600;
  color: #3a3a3a;
}
.company-name{
  margin-top: 10rpx;
}
.main-title{
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}
.main-title__text{
  position: relative;
  width: 160rpx;
  margin: 0 auto;
  text-align: center;
  z-index: 2;
}
.main-title__text::after{
  position: absolute;
  bottom: 0;
  display: block;
  content: '';
  width: 100%;
  height: 20rpx;
  background-color: #f1ad28;
  z-index: -1;
}
.company-desc{
  text-indent: 48rpx;
  font-size: 24rpx;
  color: #3a3a3a;
}





